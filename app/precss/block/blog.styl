.blog
  padding-bottom: 0
  +sm-s()
    padding: 0
  &__home
    grid-gap gutter
    grid-template-columns repeat(4, 1fr)
    +lg-m()
      grid-template-columns repeat(3, 1fr)
    +md-m()
      grid-template-columns repeat(2, 1fr)
    +sm-m()
      grid-template-columns 1fr
  h2
    margin-top: 0
    margin-bottom: 50px
  &__item
    background-color: #f7f7f7
    text-decoration: none
    grid-template-rows 1fr 1fr
    transition background-color .25s ease
    overflow hidden
    color: #333
    &:nth-child(3)
      grid-column 3 / 5
    &:nth-child(4)
      grid-column 1 / 3
    &:hover
      background-color: fon2
      h4
        color: fon
      .blog__img
        transform scale(1.05) translateY(-6.5px)
    +lg-m()
      &:nth-child(3)
        grid-column 2 / 3
        grid-row 1
      &:nth-child(4)
        grid-column 1 / 2
        grid-row 2
    +sm-m()
      &:nth-child(3)
        grid-column initial
      &:nth-child(4)
        grid-column initial
  &__img
    height: 270px
    background-size: cover
    background-position: center
    transition transform  .25s ease
  &__content
    padding: 25px
    text-align: center
    align-content: center
  h4
    r-bold()
    font-size: 18px
    color: #666
    line-height: 1.3
    margin: 0
    transition color  .25s ease
  p
    margin-top: 20px
    margin-bottom: 0
  & .portfolio__case
    +lg-m()
      grid-column 1 / 4
    +md-m()
      grid-column 1 / 3
    +sm-m()
      grid-column 1 / 2