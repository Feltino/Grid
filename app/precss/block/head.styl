.grid
  display: grid
.head
  min-height: 100vh
  background-size: cover
  background-position: center
  position: relative
  align-content: center
  &::before
    content ''
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: fon
    opacity: .92
  & .content
    z-index: 1
    color: #fff
    text-align: center
    padding: 60px gutter
    +sm-m()
      padding: 40px 20px
  &__title
    font-size: 60px
    intro()
    font-weight: normal
    margin: 20px 0
    line-height: 1.5
    +md-m()
      line-height: 1.3
    +sm-m()
      font-size: 50px
    +xs-m()
      font-size: 45px
    +xxs-m()
      font-size: 40px
